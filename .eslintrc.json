{
    "env": {
        "browser": true,
        "es6": true,
        "node": true,
        "mocha": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
      "no-cond-assign": ["error", "except-parens"],
      "no-continue": "off",
      "camelcase": ["error", { "ignoreDestructuring": true, "properties": "never" }],
      "padded-blocks": "off",
      "no-use-before-define": ["error", { "functions": false }]
    },
    "plugins": [
    ]
}

